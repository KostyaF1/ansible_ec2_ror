
# Archive with ruby-install pack on git
git_ruby_install: https://github.com/postmodern/ruby-install/archive/v0.6.1.tar.gz

# Archive with chruby pack on git
git_chruby: https://github.com/postmodern/chruby/archive/v0.3.9.tar.gz

# ruby installation pack
ruby_install: ruby-install-0.6.1
chruby: chruby-0.3.9

# version of installing ruby
ruby_version: 2.5.0

# Root directory where Ruby will install
ruby_dir: /home/ubuntu

# Home dir for user on remote Ubuntu
home_dir: "/home/{{ auth.user }}"
